

	/**
	 * Update the specified resource in storage.
	 *
	 * @param  int  $id
	 * @param  {{model}}Request $request
	 * @return Response
	 */
	public function update({{model}}Request $request, $id)
	{
        ${{resource}} = {{model}}::findOrFail($id);
        ${{resource}}->update($request->all());

        return 1;
	}
