<form action="{{ route( '(( resource )).update', $(( resource )) ) }}" method="post">

	{{ csrf_field() }}
    {{ method_field('PUT') }}

	<div class="form-group">
		<label>Field</label>
		<input type="text" name="" id="" value="{{ $(( resource ))->id }}" class="form-control">
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>

</form>
